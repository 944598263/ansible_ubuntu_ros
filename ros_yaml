- name: install python-pip
  become: yes
  become_user: root
  become_method: sudo
  apt:
    name: 
      - python3-pip
    state: present
  retries: 5
  register: result
  until: result is succeeded

- name: Install rosdepc
  become: yes
  become_user: root
  become_method: sudo
  pip:
    name: rosdepc
    state: present
  retries: 5
  register: result
  until: result is succeeded

- name: rosdepc init
  become: yes
  become_user: root
  become_method: sudo
  shell: rosdepc init 
  retries: 5
  register: result
  until: result is succeeded

- name: rosdepc update
  become: yes
  become_user: root
  become_method: sudo
  shell: rosdepc update
  retries: 5
  register: result
  until: result is succeeded

- name: install-ros-rely
  become: yes
  become_user: root
  become_method: sudo
  apt:
    name:
      - python-rosinstall
      - python-rosinstall-generator
      - python-wstool
      - build-essential
      - ros-melodic-desktop
    state: present

- name: copy source_profile.sh
  become: yes
  become_user: root
  become_method: sudo
  copy:
    src: source_profile.sh
    dest: /opt/dms

- name: profile
  become: yes
  become_user: root
  become_method: sudo
  shell: |
    echo 'source /opt/ros/melodic/setup.bash' >> /etc/profile
    cd /opt/dms
    sh source_profile.sh
    rm -rf source_profile.sh

