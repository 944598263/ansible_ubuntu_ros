- name: Add ros apt key
  become: yes
  become_user: root
  become_method: sudo
  shell: |
    sudo sh -c '. /etc/lsb-release && echo "deb http://packages.ros.org/ros/ubuntu $(lsb_release -sc) main" > /etc/apt/sources.list.d/ros-latest.list' 
    sudo apt-key adv --keyserver 'hkp://keyserver.ubuntu.com:80' --recv-key C1CF6E31E6BADE8868B172B4F42ED6FBAB17C654 
    sudo apt update

- name: Install ros-melodic-desktop-full
  become: yes
  become_user: root
  become_method: sudo
  apt: 
    name: ros-melodic-desktop-full
    state: present
  retries: 5
  register: result
  until: result is succeeded

- name: Install python-rosdep2
  become: yes
  become_user: root
  become_method: sudo
  apt:
    name: python-rosdep2
    state: present
  retries: 5
  register: result
  until: result is succeeded

